<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns = "urn:nhibernate-mapping-2.2"
   assembly = "ORM_NHibernate" namespace = "ORM_NHibernate.BusinessObjects">
  <joined-subclass name="Movie" extends="Product">
    <key column="Id" />
    
    <property name="Director" />
    <list name="Actors" inverse="false" cascade="all">
      <key column="MovieId" />
      
      <index column="ActorIndex" />
      <one-to-many class="ActorRole"/>
    </list>
    <property name="NewProp">
      <column name="NewProp" sql-type="VARCHAR(100)" />
    </property>
  </joined-subclass>
</hibernate-mapping>