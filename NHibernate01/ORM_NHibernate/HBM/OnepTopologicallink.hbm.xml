<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns = "urn:nhibernate-mapping-2.2"
   assembly = "ORM_NHibernate" namespace = "ORM_NHibernate.BusinessObjects">

  <class name = "OnepTopologicallink" table="onep_topologicallink" lazy="true" discriminator-value="1">
    <id name = "Id" column="oid">
      <generator class = "hilo"/>
    </id>
    
    <discriminator column="Discriminator" type="int" not-null="false" length="2"/>

    <property name="Name" column="name" />
    <property name="Length" column="length" />
    <property name="DefaultId" column="defaultId" />

    <property name="Ptp" column="PTP" />
    <property name="Name" column="name" />
    <property name="Notes" column="notes" />
    
    <many-to-one name="OnepNetwork" column="network" class="OnepNetwork" />
    
    <bag name="OnepTopologicallinksForAEndTP" lazy="true" cascade="all" inverse="true" fetch="select" >
      <key column="aEndTP"></key>
      <one-to-many class="OnepTopologicallink"></one-to-many>
    </bag>
    <bag name="OnepTopologicallinksForZEndTP" lazy="true" cascade="all" inverse="true" fetch="select" >
      <key column="zEndTP"></key>
      <one-to-many class="OnepTopologicallink"></one-to-many>
    </bag>
    
    <many-to-one name="OnepAmpRole" cascade="all" class="OnepAmptp" property-ref="OnepTerminationpoint"/>
  </class>

</hibernate-mapping>
